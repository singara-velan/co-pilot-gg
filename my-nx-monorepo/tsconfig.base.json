{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@my-app/*": [
        "apps/my-app/src/*"
      ],
      "@my-app-e2e/*": [
        "apps/my-app-e2e/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}